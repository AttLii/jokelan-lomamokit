{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
